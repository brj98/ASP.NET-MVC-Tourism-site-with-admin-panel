@using FPRO.Models.Class
@model List<Restoranlar>
@{
    ViewBag.Title = "Restoranlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Açıklama</th>
            <th scope="col">Resim</th>
            <th scope="col">Sil</th>
            <th scope="col">Güncelleme</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td>@i.Aciklama</td>
            <td> <img style="height:100px;" src="@i.Resim" /></td>

            <td><a href="/Admin/ResSil/@i.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/ResDuzelt/@i.ID" class="btn btn-warning">Güncelle</a></td>

        </tr>
        }
    </tbody>
</table>
<a href="/Admin/YeniRestoran/" class="btn btn-outline-success">Yeni Restoran Ekle</a>

<style>
    td {
        background: #fff;
        color: #111;
        border: solid 1px #111;
    }

    th {
        border: solid 1px #fff;
    }
</style>
